extends base
include mixins/video

block content
    div.profile-wrapper
        div.profile__data
            if user.avatarUrl
                img(src=user.avatarUrl).avatar
            else
                a(href="/users/edit-profile").avatar.avatar-empty
                    i.fas.fa-plus
            h3 #{user.name}'s profile
        if videos.length
            div.video-grid
                each video in videos
                    +video(video)
        else
            span.empty__message This user hasn't uploaded any videos yet.