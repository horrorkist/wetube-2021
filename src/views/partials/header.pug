header.header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav.header__nav
        ul
            if !loggedIn
                li
                    a(href="/join") register
                li
                    a(href="/login") Login
            else
                li
                    a(href=`/users/${user._id}`)
                        if user.avatarUrl
                            img(src="/" + user.avatarUrl).header__avatar
                        else
                            span My Profile
                li
                    a(href= "/users/edit-profile") Edit Profile
                li
                    a(href="/users/logout") Logout
                li
                    a(href="/videos/upload") Upload
            li
                a(href="/search") Search
